<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

    <RadioGroup
            android:id="@+id/rg_music_tab"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp">

        <RadioButton
                android:id="@+id/rb_radio"
                android:gravity="center"
                android:textColor="@drawable/app_select_rb_text_color"
                android:layout_gravity="center"
                android:text="收音机"
                android:button="@null"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"/>

        <RadioButton
                android:id="@+id/rb_music"
                android:gravity="center"
                android:textColor="@drawable/app_select_rb_text_color"
                android:layout_gravity="center"
                android:text="音乐"
                android:button="@null"
                android:layout_width="80dp"
                android:layout_height="40dp"/>

        <RadioButton
                android:id="@+id/rb_pic"
                android:gravity="center"
                android:textColor="@drawable/app_select_rb_text_color"
                android:layout_gravity="center"
                android:text="图片"
                android:button="@null"
                android:layout_width="80dp"
                android:layout_height="40dp"/>

        <RadioButton
                android:id="@+id/rb_vedio"
                android:textColor="@drawable/app_select_rb_text_color"
                android:gravity="center"
                android:text="视频"
                android:button="@null"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"/>
    </RadioGroup>

    <LinearLayout
            android:gravity="center"
            android:layout_marginTop="53dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/iv_radio"
                android:visibility="invisible"
                android:src="@mipmap/tap_line"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"/>

        <ImageView
                android:id="@+id/iv_music"
                android:visibility="invisible"
                android:src="@mipmap/tap_line"
                android:layout_width="80dp"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/iv_pic"
                android:visibility="invisible"
                android:src="@mipmap/tap_line"
                android:layout_width="80dp"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/iv_vedio"
                android:visibility="invisible"
                android:src="@mipmap/tap_line"
                android:scaleType="fitXY"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/rg_music_tab"
            android:layout_marginTop="10dp"
            android:gravity="center">

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/music_source_button_usb1_n"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="USB1"/>
        </LinearLayout>

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/music_source_button_usb2_n"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="USB2"/>
        </LinearLayout>

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/music_source_button_bt_d_n"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="蓝牙"/>
        </LinearLayout>

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <LinearLayout
                android:id="@+id/ll_local_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/music_source_button_hd_n"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="本地存储"/>
        </LinearLayout>

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/fl_music_child"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:visibility="gone"/>
</RelativeLayout>
