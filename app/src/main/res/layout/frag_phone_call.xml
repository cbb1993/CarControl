<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_number"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
          <LinearLayout
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:layout_marginBottom="10dp"
                  android:layout_above="@id/recycler_number"
                  android:layout_centerHorizontal="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
              <EditText
                      android:maxLength="11"
                      android:background="@color/transparent"
                      android:inputType="phone"
                      android:textColor="@color/white"
                      android:id="@+id/ev_number"
                      android:layout_width="150dp"
                      android:layout_height="wrap_content"/>
              <ImageView
                      android:id="@+id/iv_delete"
                      android:layout_marginLeft="10dp"
                      android:src="@mipmap/phone_button_delete_n"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
          </LinearLayout>

            <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/recycler_number"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/phone_button_call_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

    <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <ImageView
                android:src="@mipmap/musiclist_bg"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_people"
                android:layout_centerInParent="true"
                android:layout_width="320dp"
                android:layout_height="320dp"/>

    </RelativeLayout>
</LinearLayout>
